# The order matters.
zstyle ':prezto:load' pmodule \
  'environment' \
  'archive' \
  'directory' \
  'git' \
  'homebrew' \
  'osx' \
  'ruby' \
  'gnu-utility' \
  'utility' \
  'terminal' \
  'editor' \
  'history' \
  'directory' \
  'spectrum' \
  'utility' \
  'completion' \
  'syntax-highlighting' \
  'prompt'

# Set the key mapping style to 'emacs' or 'vi'.
zstyle ':prezto:module:editor' key-bindings 'vi'

# Auto convert .... to ../..
# zstyle ':prezto:module:editor' dot-expansion 'yes'

# Ignore submodules when they are 'dirty', 'untracked', 'all', or 'none'.
zstyle ':prezto:module:git:status:ignore' submodules 'all'

# Prety-print format the output of git log
zstyle ':prezto:module:git:log:context' format '%h - %an, %ar : %s'

