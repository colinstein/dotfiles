# this uses the view_attachment script found in ~/.mutt/view_attachment.sh

# Microsoft Excel
application/x-msexcel; ~/.mutt/bin/view_attachment.sh %s
application/ms-exc; ~/.mutt/bin/view_attachment.sh %s
application/excel; ~/.mutt/bin/view_attachment.sh %s
application/msexcel; ~/.mutt/bin/view_attachment.sh %s
application/vnd.ms-exc; ~/.mutt/bin/view_attachment.sh %s
application/vnd.ms-excel; ~/.mutt/bin/view_attachment.sh %s

# Microsoft Word
# use textedit to open .doc files as it's more light-weight
application/msword; ~/.mutt/bin/view_attachment.sh %s "-" '/Applications/TextEdit.app'
application/vnd.openxmlformats-officedocument.wordprocessingml.document; ~/.mutt/bin/view_attachment.sh %s "-" '/Applications/TextEdit.app'
application/vnd.openxmlformats-officedocument.wordprocessingml.template; ~/.mutt/bin/view_attachment.sh %s "-" '/Applications/TextEdit.app'

# Images
image/jpg; ~/.mutt/bin/view_attachment.sh %s jpg
image/jpeg; ~/.mutt/bin/view_attachment.sh %s jpg
image/pjpeg; ~/.mutt/bin/view_attachment.sh %s jpg
image/png; ~/.mutt/bin/view_attachment.sh %s png
image/gif; ~/.mutt/bin/view_attachment.sh %s gif

# PDF
application/pdf; ~/.mutt/bin/view_attachment.sh %s pdf

# HTML
#text/html; ~/.mutt/view_attachment.sh %s html
text/html;  LC_ALL=C elinks -force-html -dump-width 80 -no-numbering -dump %s; copiousoutput
# Unidentified.
application/octet-stream; ~/.mutt/bin/view_attachment.sh %s "-"
